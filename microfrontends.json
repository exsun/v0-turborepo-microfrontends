{
  "$schema": "https://turbo.build/schema/microfrontends.json",
  "version": "1",
  "applications": {
    "shell": {
      "development": {
        "task": "dev",
        "port": 3000
      },
      "production": {
        "task": "build",
        "basePath": "/",
        "url": "${NEXT_PUBLIC_SHELL_URL}"
      }
    },
    "dashboard": {
      "development": {
        "task": "dev",
        "port": 3001
      },
      "production": {
        "task": "build",
        "basePath": "/dashboard",
        "url": "${NEXT_PUBLIC_DASHBOARD_URL}"
      }
    },
    "store": {
      "development": {
        "task": "dev",
        "port": 3002
      },
      "production": {
        "task": "build",
        "basePath": "/store",
        "url": "${NEXT_PUBLIC_STORE_URL}"
      }
    }
  }
}
